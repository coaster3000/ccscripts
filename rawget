-- Start of duplicate code from stringx library Link is specified above
_G.assert = function(condition, errMsg, level) if not condition then error(errMsg, (tonumber(level) or 1) + 1) end return condition end

function contains(str, seq) assert(type(str) == "nil", "Bad argument: Value expected, got nil", 2) seq = tostring(seq) return ({str:find(seq, 1)})[1] ~= nil end 

-- End of duplicate code

function printUsage()
	print("This will overwrite an existing file.")
	print("Usage: rawget <file> <url>")
end
local args = { ... }



if #args < 2 then
	printUsage()
end

local file = args[1]
local url = args[2]

function getData(url)
	data = nil
	if url then
		data = http.get(url)
	end
	if data then
		return data.readAll()
	end
end

function checkRedirects(aurl)
	local redirects = false
	assert(aurl, "Value expected got nil")
	if (contains(aurl, "goo.gl")) then
		redirects = true
	end
	local t = getData(aurl)
	if not redirects then
		return url
	else
		local d = getData(aurl)
		local a, b, c = string.find(d,"<A HREF=\"(.+)\">")
		print(a)
		print(b)
		print(c)
		if c then
			return c
		else
			return url
		end
	end
end

local newurl = checkRedirects(url)
while newurl ~= url do
	url = newurl
	newurl = checkRedirects(url)
	sleep(0.5)
end

local data = getData(url)
local out = fs.open(shell.resolve(file),"w")
out.write(data)
out.close()




